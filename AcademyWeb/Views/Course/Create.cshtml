@model AcademyWeb.ViewModels.Course.CreateCourseView

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control" min="0"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="NumberOfModules" class="control-label"></label>
                <input asp-for="NumberOfModules" type="number" class="form-control" min="0"/>
                <span asp-validation-for="NumberOfModules" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" type="number" class="form-control" min="0.0" max="5.0" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" type="number" class="form-control" min="0"/>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a class="btn btn-outline-secondary" asp-action="Delete">Back to List</a>
            </div>
        </form>
    </div>
</div>

