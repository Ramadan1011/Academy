@model AcademyWeb.ViewModels.Course.CourseView

@{
    ViewData["Title"] = "Edit";
}

<h1>@Html.DisplayNameFor(model => model.Name)</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex gap-5">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex mt-2 gap-5">
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" type="number" class="form-control" min="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount" class="control-label"></label>
                    <input asp-for="Discount" type="number" class="form-control" min="0" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex mt-2 gap-5">
                <div class="form-group">
                    <label asp-for="NumberOfModules" class="control-label"></label>
                    <input asp-for="NumberOfModules" type="number" class="form-control" min="0" />
                    <span asp-validation-for="NumberOfModules" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" type="number" class="form-control" min="0" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex mt-2 align-self-baseline">
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-success" /> |
                    <a class="btn btn-outline-secondary" asp-action="Delete">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
